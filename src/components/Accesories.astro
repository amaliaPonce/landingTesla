---
import Section from "./Section.astro"
---

<Section
  title="Accesorios"
  subtitle=""
  color="black"
  id="accesorios"
  showFooterContent="true"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="border-[3px] border-black bg-black text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors duration-300 hover:border-gray-800 hover:bg-gray-800"
      href="#"
    >
      Comprar ahora</a
    >
  </div>

  <img
    slot="background"
    alt="Accesorios"
    class="h-full w-full object-cover object-center"
    src="accessories.avif"
    id="bg-image-accessories"
  />
</Section>

<script type="module">
  import { isEdge } from "../utils/detectEdge";

  const imageElement = document.querySelector(
    "#bg-image-accessories"
  ) as HTMLImageElement;

  imageElement.src = isEdge() ? "accessories.webp" : "accessories.avif";
</script>